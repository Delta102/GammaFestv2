<!DOCTYPE html>
<html lang="en">
<head>
	<title>Login V1</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<!--<link rel="icon" type="image/png" href="images/icons/favicon.ico"/>
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/css/dist/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<!--===============================================================================================-->
</head>

<body>

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="https://dewey.tailorbrands.com/production/brand_version_mockup_image/121/7767614121_a8207d12-1307-47cf-800f-6e491222498a.png?cb=1662594150" alt="IMG">
					@if (ViewData["MENSAJE"] != null)
					{
						<br>
						<br>
						<div class=" alert alert-danger">
							@ViewData["MENSAJE"]
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					}
				</div>

				<form class="login100-form validate-form" id="account" method="post">
					<span class="login100-form-title">
						GAMMA-FEST
					</span>

					<span class="login100-form-title">
						Inicio de Sesión
					</span>

					<div class="wrap-input100 validate-input">
						<input id="Input_Email" name="email" class="input100" autocomplete="username" aria-required="true" placeholder="Email" style="position: relative;
  right: -1.5em;" />
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input">
						<input id="Input_Password" name="password" class="input100" autocomplete="current-password" aria-required="true" placeholder="Password" style="position: relative;
  right: -1.5em;" />
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>

					<div class="container-login100-form-btn">
						<button id="login-submit" class="login100-form-btn" id="login-submit" type="submit">
							Iniciar Sesión
						</button>
					</div>

					<div class="text-center p-t-12">
						<span class="txt1">
							Olvidaste tu contraseña?
						</span>
						@*<a class="txt2" id="forgot-password" asp-page="./ForgotPassword">
							Haz clíck aquí
						</a>*@
					</div>

					@*<div class="text-center p-t-136">
						<a class="txt2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
							Eres nuevo? Presiona aquí para crearte una cuenta
							<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
						</a>
					</div>*@
				</form>
			</div>
		</div>
	</div>
</body>
</html>